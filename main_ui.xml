<tkinter>
    <window title="Lightroom Custom UI" width="1000" height="600" bg="#2c2c2c">
        <frame name="main_frame" side="top" fill="both" expand="yes" bg="#2c2c2c">
            <panedwindow orient="horizontal" side="top" fill="both" expand="yes">
                <frame name="left_panel" width="500" minsize="150" side="left" fill="y" bg="#2c2c2c">
                    <label name="image_thumbnail" side="top" fill="both" expand="yes" bg="#2c2c2c"/>
                    <label text=" " side="top" fill="both" expand="yes" bg="#2c2c2c"/>
                    <frame name="buttons_frame" side="top" fill="x" expand="no" bg="#2c2c2c">
                        <button text="Upload" side="top" fill="x" bg="#3c3c3c" fg="#ffffff"/>
                        <button text="Brightness" side="top" fill="x" bg="#3c3c3c" fg="#ffffff"/>
                        <button text="A" side="top" fill="x" bg="#3c3c3c" fg="#ffffff"/>
                        <button text="A" side="top" fill="x" bg="#3c3c3c" fg="#ffffff"/>
                        <button text="A" side="top" fill="x" bg="#3c3c3c" fg="#ffffff"/>
                        <button text="A" side="top" fill="x" bg="#3c3c3c" fg="#ffffff"/>
                        <button text="Export" side="top" fill="x" bg="#3c3c3c" fg="#ffffff"/>
                    </frame>
                </frame>
                <panedwindow orient="vertical" side="left" fill="both" expand="yes">
                    <frame name="image_display" minsize="400" side="top" fill="both" expand="yes" bg="#2c2c2c">
                        <label name="image_edit" side="top" fill="both" expand="yes" bg="#2c2c2c"/>
                        <label text=" " side="top" fill="both" expand="yes" bg="#2c2c2c"/>
                        <frame name="undo_redo_frame" side="bottom" fill="x" expand="no" bg="#2c2c2c">
                            <button text="⟲"  bg="#3c3c3c" fg="#ffffff"/><button text="⟳"  bg="#3c3c3c" fg="#ffffff"/>
                        </frame>
                    </frame>
                </panedwindow>
                <frame name="right_panel" width="500" minsize="150" side="right" fill="y" bg="#2c2c2c">
                    <frame name="control_panel" height="200" minsize="150" side="bottom" fill="x" bg="#2c2c2c">
                        <label text=" " side="top" fill="x" bg="#2c2c2c"/>
                        <label text=" " side="top" fill="x" bg="#2c2c2c"/>
                        <scale from="0" to="100" orient="horizontal" side="top" fill="x" bg="#2c2c2c"/>
                        <label text=" " side="top" fill="x" bg="#2c2c2c"/>
                        <scale from="0" to="100" orient="horizontal" side="top" fill="x" bg="#2c2c2c"/>
                        <label text=" " side="top" fill="x" bg="#2c2c2c"/>
                        <scale from="0" to="100" orient="horizontal" side="top" fill="x" bg="#2c2c2c"/>
                        <label text=" " side="top" fill="x" bg="#2c2c2c"/>
                        <scale from="0" to="100" orient="horizontal" side="top" fill="x" bg="#2c2c2c"/>
                        <label text=" " side="top" fill="x" bg="#2c2c2c"/>
                        <scale from="0" to="100" orient="horizontal" side="top" fill="x" bg="#2c2c2c"/>
                    </frame>
                </frame>
            </panedwindow>
        </frame>
    </window>
</tkinter>
